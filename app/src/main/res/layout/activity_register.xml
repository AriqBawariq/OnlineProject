<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="14pt"
            android:gravity="center"
            >

        </TextView>

    </RelativeLayout>

    //Username
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrasi Nama"
        android:textSize="8pt"
        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNewName"
        android:textSize="8pt"
        android:hint="Enter New Name"
        ></EditText>

    //Email
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrasi Email Anda"
        android:textSize="8pt"
        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNewEmail"
        android:textSize="8pt"
        android:hint="Enter New Email"
        ></EditText>

    //Password
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrasi Password Anda"
        android:textSize="8pt"
        ></TextView>
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNewPassword"
        android:textSize="8pt"
        android:hint="Enter New Password"
        ></EditText>

    //No HP
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrasi No. Telp. Anda"
        android:textSize="8pt"
        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNewNoHP"
        android:textSize="8pt"
        android:hint="Enter New Phone Number"
        ></EditText>

    //No KTP
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrasi No. KTP Anda"
        android:textSize="8pt"
        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNewKTP"
        android:textSize="8pt"
        android:hint="Enter New KTP"
        ></EditText>

    //No Address
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrasi Alamat Anda"
        android:textSize="8pt"
        ></TextView>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNewAddress"
        android:textSize="8pt"
        android:hint="Enter New Address"
        ></EditText>

    <Button
        android:id="@+id/BtnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        ></Button>
    <Button
        android:id="@+id/BtnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back To Login"
        ></Button>


</LinearLayout>